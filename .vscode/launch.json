{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "make",
            "name": "构建 nodejs 源代码",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "调试 Node App (internal module)",
            "port": 9229,
            "request": "attach",
            "skipFiles": [],
            "type": "pwa-node"
        },
        {
            "name": "初始化 Node 源码调试 (internal module)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/Debug/node",
            "args": ["--inspect-brk", "${workspaceFolder}/demos/timeout.js"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "NODE_DEBUG",
                    "value": "TIMER"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "初始化 Node 源码调试 (cpp)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/Debug/node",
            "args": ["${workspaceFolder}/demos/timeout.js"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}